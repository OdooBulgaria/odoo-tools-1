<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <!-- PRUEBA: anadir boton en iniciativa para lanzar la accion de enviar
         mensajes que luego sera lanzado por el cron -->
        <record id="form_crm_lead_prueba" model="ir.ui.view">
            <field name="name">crm.lead.form.prueba</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='name']" position="after">
                        <button name="check_lead_period" string="PRUEBA ENVIAR MENSAJE"
                        type="object"/>                        
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>
