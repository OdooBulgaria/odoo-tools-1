<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Warning messaging -->
        <record id="tree_warning_messaging" model="ir.ui.view">
            <field name="name">warning.messaging.tree</field>
            <field name="model">warning.messaging</field>
            <field name="arch" type="xml">
                <tree string="Warning messaging">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="body"/>
                    <field name="cron_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="search_warning_messaging" model="ir.ui.view">
            <field name="name">warning.messaging.search</field>
            <field name="model">warning.messaging</field>
            <field name="arch" type="xml">
                <search string="Warning messaging">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="body"/>
                    <field name="cron_id"/>
                    <field name="state"/>
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="name" domain="[]" context="{'group_by':'name'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="form_warning_messaging" model="ir.ui.view">
            <field name="name">warning.messaging.form</field>
            <field name="model">warning.messaging</field>
            <field name="arch" type="xml">
                <form string="Warning messaging">
<!--
                    <header>
                        <button name="STATE_BUTTON" states="draf,done" string="Print" class="oe_highlight" groups="base.group_user"/>
                        <button name="ACTION_BUTTON" states="pending" string="Print" type="object" groups="base.group_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft, done" statusbar_colors='{"draft":"blue","done":"red"}'/>
                    </header>
 -->
                     <sheet string="Warning messaging Sheet">
                        <notebook>
                            <page name="information" string="Information">
                                <group colspan="4">
                                    <group>
                                        <field name="name"/>
                                        <field name="model_id"/>
                                        <field name="body"/>
                                        <field name="cron_id"/>
                                    </group>
                                    <group>
                                        <field name="state"/>
                                        <button name="to_active"
                                                string="Activar (CREA/ACTIVA CRON)"
                                                type="object"
                                                states="inactive"/>
                                        <button name="to_inactive"
                                                string="Desactivar (DESACTIVA CRON)"
                                                type="object"
                                                states="active"/>
                                    </group>
                                </group>
                                <group colspan="4" string="Condiciones">
                                    <field name="condition_ids" nolabel="1"/>
                                </group>
                                <group colspan="4" string="Acciones">
                                    <field name="action_ids" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                </form>
            </field>
        </record>

        <record id="action_warning_messaging" model="ir.actions.act_window">
            <field name="name">Warning messaging</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">warning.messaging</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="search_warning_messaging"/>
        </record>

        <!-- warning.condition -->
        <record id="tree_warning_condition" model="ir.ui.view">
