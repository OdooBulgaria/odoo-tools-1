        <!-- Warning messaging -->
        <record id="tree_warning_messaging" model="ir.ui.view">
            <field name="name">warning.messaging.tree</field>
            <field name="model">warning.messaging</field>
            <field name="arch" type="xml">
                <tree string="Warning messaging">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="body"/>
                    <field name="cron_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="search_warning_messaging" model="ir.ui.view">
            <field name="name">warning.messaging.search</field>
            <field name="model">warning.messaging</field>
            <field name="arch" type="xml">
                <search string="Warning messaging">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="body"/>
                    <field name="cron_id"/>
                    <field name="state"/>

<!--                     <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Date" domain="[]" context="{'group_by':'start_date'}" />
                        <filter string="Patient" domain="[]" context="{'group_by':'patient_id'}" />
                        <filter string="Doctor" domain="[]" context="{'group_by':'doctor_id'}" />
                        <filter string="Location" domain="[]" context="{'group_by':'location_id'}" />
                    </group> -->
                </search>
            </field>
        </record>

        <record id="form_warning_messaging" model="ir.ui.view">
            <field name="name">warning.messaging.form</field>
            <field name="model">warning.messaging</field>
            <field name="arch" type="xml">
                <form string="Warning messaging">
                    <sheet string="Warning messaging Sheet">
                        <!-- <div class="oe_title">
                            <h1>
                                <label string="New appointment" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                                <field name="name" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                            </h1>
                        </div>
                        <group col="4">
                            <field name="patient_id"/>
                            <field name="type_id"/>
                        </group> -->
                        <notebook>
                            <page name="information" string="Information">
                                <group colspan="4">
                                    <group>
                                        <field name="name"/>
                                        <field name="model_id"/>
                                        <field name="function_name"/>
                                        <field name="body"/>
                                        <field name="cron_id"/>
                                    </group>
                                    <group>
                                        <field name="state"/>
                                        <button name="to_active"
                                                string="Activar (CREA/ACTIVA CRON)"
                                                type="object"
                                                states="inactive"/>
                                        <button name="to_inactive"
                                                string="Desactivar (DESACTIVA CRON)"
                                                type="object"
                                                states="active"/>                        
                                    </group>
                                </group>
                                <group colspan="4" string="Condiciones">
                                    <field name="condition_ids" nolabel="1"/>
                                </group>
                                <group colspan="4" string="Acciones">
                                    <field name="action_ids" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                </form>
            </field>
        </record>

        <record id="action_warning_messaging" model="ir.actions.act_window">
            <field name="name">Warning messaging</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">warning.messaging</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="search_warning_messaging"/>
        </record>

